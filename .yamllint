---

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

rules:
  braces: 
    level: warning
  brackets: enable
  colons: enable
  commas:
    level: warning
  comments:
    level: warning
  comments-indentation:
    level: warning
  document-end: disable
  document-start: disable
  empty-lines: enable
  empty-values: disable
  hyphens: enable
  indentation: enable
  key-duplicates: enable
  key-ordering: disable
  line-length: enable
  new-line-at-end-of-file: 
    level: warning
  new-lines: 
    level: warning
  octal-values: disable
  quoted-strings: disable
  trailing-spaces: 
    level: warning
  truthy:
    level: warning
